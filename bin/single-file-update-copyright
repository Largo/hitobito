#!/usr/bin/env bash

# strict mode
set -euo pipefail
IFS=$'\n\t'


year=$(date +%Y)
file=$1

echo "Updating Copyright in $file"

# Copyright (c) 2018,
# Copyright (c) 2018-2021,
sed -i -r "
  s/Copyright \(c\) (([[:digit:]]{4})(-[[:digit:]]{4})?),/Copyright \(c\) \2-$year,/g
  s/Copyright \(c\) $year-$year,/Copyright \(c\) $year,/g
" $file
